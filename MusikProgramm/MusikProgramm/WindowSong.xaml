<Window x:Class="MusikProgramm.WindowSong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusikProgramm"
        mc:Ignorable="d"
        Title="WindowPlaylist" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Rectangle Grid.Row="4" Grid.ColumnSpan="2" Fill="DarkSlateBlue"/>
        <!-- Hier kommt später die Musikwiedergabe hin -->
        <Rectangle Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Fill="SlateBlue"/>
        <!-- Hier kommen die Songs hin -->

        <Label Grid.ColumnSpan="2" Content="Song - Name" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bauhaus 93"/>

        <DockPanel Grid.Column="0" Grid.Row="3">
            <Button Content="Edit Song" Width="100" Height="30" Margin="5" HorizontalAlignment="Left"/>
            <Button Content="Delete Song" Width="100" Height="30" Margin="5" HorizontalAlignment="Left"/>
        </DockPanel>
    </Grid>
</Window>
