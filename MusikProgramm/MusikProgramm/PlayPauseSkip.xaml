<UserControl x:Class="MusikProgramm.PlayPauseSkip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusikProgramm"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="1" x:Name="ButtonShuffle" Click="ButtonShuffle_Click" Margin="2px">
            <Button.Background>
                <ImageBrush ImageSource="/images/shuffle_thin.png" Stretch="Uniform" TileMode="None"/>
            </Button.Background>
        </Button>

        <Button Grid.Column="2" x:Name="ButtonBack" Click="ButtonBack_Click" Margin="2px">
            <Button.Background>
                <ImageBrush ImageSource="/images/backward.png" Stretch="Uniform" TileMode="None"/>
            </Button.Background>
        </Button>

        <Button Grid.Column="3" x:Name="ButtonPlayPause" Click="ButtonPlayPause_Click" Margin="2px">
            <Button.Background>
                <ImageBrush ImageSource="/images/play.png" Stretch="Uniform" TileMode="None"/>
            </Button.Background>
        </Button>

        <Button Grid.Column="4" x:Name="ButtonSkip" Click="ButtonSkip_Click" Margin="2px">
            <Button.Background>
                <ImageBrush ImageSource="/images/forward.png" Stretch="Uniform" TileMode="None"/>
            </Button.Background>
        </Button>

        <Button Grid.Column="5" x:Name="ButtonRepeat" Click="ButtonRepeat_Click" Margin="2px">
            <Button.Background>
                <ImageBrush ImageSource="/images/repeat_thin.png" Stretch="Uniform" TileMode="None"/>
            </Button.Background>
        </Button>
       
        
    </Grid>
</UserControl>
