<UserControl x:Class="MusikProgramm.PlayPauseSkip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusikProgramm"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1">
            <Image Source="/images/shuffle_thin.png"></Image>
        </Button>
        <Button Grid.Column="2">
            <Image Source="/images/backward.png"></Image>
        </Button>
        <Button Grid.Column="3">
            <Image Source="/images/play.png"></Image>
        </Button>
        <Button Grid.Column="4">
            <Image Source="/images/forward.png"></Image>
        </Button>
        <Button Grid.Column="5">
            <Image Source="/images/repeat_thin.png"></Image>
        </Button>
       
        
    </Grid>
</UserControl>
